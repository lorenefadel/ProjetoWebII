@model CoordenadorModel
<h2>Cadastro de Coordenadores</h2>

<button type="button" class="btn btn-block btn-primary" onclick="Voltar()">Lista de Coordenadores</button>
<br />

<form asp-controller="Coordenador" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try
    {@ViewBag.Coordenador.Id} catch { } ">

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try
            {@ViewBag.Coordenador.Nome} catch { } " />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF</label>
        <input asp-for="CPF" type="text" class="form-control" value="@try
            {@ViewBag.Coordenador.CPF} catch { } " />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Perfil</label>
        <input asp-for="Perfil" type="text" class="form-control" value="@try
            {@ViewBag.Coordenador.Perfil} catch { } " />
        <span asp-validation-for="Perfil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Titulação</label>
        <input asp-for="Titulacao" type="text" class="form-control" value="@try
            {@ViewBag.Coordenador.Titulacao} catch { } " />
        <span asp-validation-for="Titulacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" value="@try
            {@ViewBag.Coordenador.Email} catch { } " />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>

<script>
    function Voltar() {
        window.location.href = '../../Coordenador/Index'
    }

</script>