@model ProfessorModel
<h2>Cadastro de Professores</h2>
<button type="button" class="btn btn-block btn-primary" onclick="Voltar()">Lista de Professores</button>
<br />

<form asp-controller="Professor" asp-action="Cadastro">
    <input type="hidden" asp-for="Id" value="@try
    {@ViewBag.Professor.Id} catch { } ">

    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" type="text" class="form-control" value="@try
            {@ViewBag.Professor.Nome} catch { } " />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CPF</label>
        <input asp-for="CPF" type="text" class="form-control" value="@try
            {@ViewBag.Professor.CPF} catch { } " />
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Perfil</label>
        <input asp-for="Perfil" type="text" class="form-control" value="@try
            {@ViewBag.Professor.Perfil} catch { } " />
        <span asp-validation-for="Perfil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Titulação</label>
        <input asp-for="Titulacao" type="text" class="form-control" value="@try
            {@ViewBag.Professor.Titulacao} catch { } " />
        <span asp-validation-for="Titulacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="text" class="form-control" value="@try
            {@ViewBag.Professor.Email} catch { } " />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-block btn-success">Salvar</button>
</form>

<script>
    function Voltar() {
        window.location.href = '../../Professor/Index'
    }

</script>